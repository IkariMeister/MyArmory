<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ########### -->
    <!-- TEXT STYLES -->
    <!-- ########### -->

    <style name="mainTitleText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="secondaryTitleText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="paragraphText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="positiveParagraphText_default" parent="paragraphText_default">
        <item name="android:textColor">@color/positive_color</item>
    </style>

    <style name="negativeParagraphText_default" parent="paragraphText_default">
        <item name="android:textColor">@color/negative_color</item>
    </style>

    <style name="paragraphProminentText_default" parent="paragraphText_default">
        <item name="android:fontFamily">@font/expressway</item>
    </style>

    <style name="positiveParagraphProminentText_default" parent="paragraphProminentText_default">
        <item name="android:textColor">@color/positive_color</item>
    </style>

    <style name="negativeParagraphProminentText_default" parent="paragraphProminentText_default">
        <item name="android:textColor">@color/negative_color</item>
    </style>

    <style name="smallParagraphText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="positiveSmallParagraphText_default" parent="smallParagraphText_default">
        <item name="android:textColor">@color/positive_color</item>
    </style>

    <style name="negativeSmallParagraphText_default" parent="smallParagraphText_default">
        <item name="android:textColor">@color/negative_color</item>
    </style>

    <style name="extraSmallParagraphText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="bigNumberText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="mediumNumberText_default" parent="bigNumberText_default">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="sectionTitleText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="subSectionTitleText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="alternativeButtonText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="collapsedBarTitleText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="expandedBarTitleText_default" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <!-- ############## -->
    <!-- BUTTONS STYLES -->
    <!-- ############## -->

    <style name="primaryButton_default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_primary_button</item>
    </style>

    <style name="alternativeButton_default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_maincolor_border_button</item>
    </style>

    <style name="alternativeSmallButton_default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_maincolor_border_button</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
    </style>

    <style name="secondaryButton_default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_secondary_button</item>
    </style>

    <style name="linkButton_default" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="widgetButton_default" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/expressway</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
